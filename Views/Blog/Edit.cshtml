@model KurumsalWeb.Models.Model.Blog
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script type="text/javascript">
    CKEDITOR.replace('ckeditor')
</script>

<h2 class="text-center">Blog Güncelleme</h2>

<div class="form">
    <form class="form-validate form-horizontal " id="register_form" method="post" action="/Blog/Edit" enctype="multipart/form-data">
        @Html.HiddenFor(x => x.Id)
        <div class="form-group ">
            <label for="fullname" class="control-label col-lg-2">Blog Başlık <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class=" form-control" name="Baslik" type="text" value="@Model.Baslik" />
            </div>
        </div>
        <div class="form-group ">
            <label for="address" class="control-label col-lg-2">Blog Kategori <span class="required">*</span></label>
            <div class="col-lg-10">
                @Html.DropDownList("KategoriId", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group ">
            <label for="username" class="control-label col-lg-2">Blog Resmi <span class="required">*</span></label>
            <div class="col-lg-10">
                <img class="img-responsive" width="200" height="150" src="@Model.ResimUrl" />
            </div>
        </div>
        <div class="form-group ">
            <label for="username" class="control-label col-lg-2">Blog Resmi <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control " name="resimUrl" type="file" />
            </div>
        </div>
        <div class="form-group ">
            <label for="password" class="control-label col-lg-2">Blog İçerik <span class="required">*</span></label>
            <div class="col-lg-10">
                <textarea class="ckeditor" name="Icerik">@Model.Icerik</textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-info" type="submit">Bilgileri Güncelle</button>
            </div>
        </div>
    </form>
    <a class="btn btn-danger" href="/Blog/Index">Geriye Dön</a>
</div>

