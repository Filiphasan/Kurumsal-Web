@model KurumsalWeb.Models.Model.Blog
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script type="text/javascript">
    CKEDITOR.replace('ckeditor')
</script>

<h2 class="text-center">Yeni Blog Kaydı</h2>

<div class="form">
    <form class="form-validate form-horizontal " id="register_form" method="post" action="/Blog/Create" enctype="multipart/form-data">
        <div class="form-group ">
            <label for="fullname" class="control-label col-lg-2">Blog Başlık <span class="required">*</span></label>
            <div class="col-lg-10">
                <input required class=" form-control" name="Baslik" type="text" />
            </div>
        </div>
        <div class="form-group ">
            <label for="address" class="control-label col-lg-2">Blog Kategori <span class="required">*</span></label>
            <div class="col-lg-10">
                @Html.DropDownList("KategoriId",null,new { @class="form-control"})
            </div>
        </div>
        <div class="form-group ">
            <label for="username" class="control-label col-lg-2">Blog Resmi <span class="required">*</span></label>
            <div class="col-lg-10">
                <input required class="form-control " name="resimUrl" type="file" />
            </div>
        </div>
        <div class="form-group ">
            <label for="password" class="control-label col-lg-2">Blog İçerik <span class="required">*</span></label>
            <div class="col-lg-10">
                <textarea required class="ckeditor" name="Icerik"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-info" type="submit">Kaydet</button>
            </div>
        </div>
    </form>
    <a class="btn btn-danger" href="/Blog/Index">Geriye Dön</a>
</div>