@model KurumsalWeb.Models.Model.Blog

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Detaylar</h2>

<div>
    <h4 class="text-center">Blog Bilgileri</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Kategori.KategoriAd)
        </dt>

        <dd>
            @Model.Kategori.KategoriAd
        </dd>
        <hr />
        <dt>
            @Html.DisplayNameFor(model => model.Baslik)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Baslik)
        </dd>
        <hr />
        <dt>
            @Html.DisplayNameFor(model => model.Icerik)
        </dt>

        <dd>
            @Html.Raw(Model.Icerik)
        </dd>
        <hr />
        <dt>
            @Html.DisplayNameFor(model => model.ResimUrl)
        </dt>

        <dd>
            <img src="@Model.ResimUrl" width="600" height="400" class="img-responsive" />
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Güncelle", "Edit", new { id = Model.Id }, new { @class = "btn btn-info" }) &nbsp;&nbsp;|&nbsp;&nbsp;
    @Html.ActionLink("Geriye Dön", "Index", new { }, new { @class = "btn btn-danger" })
</p>
