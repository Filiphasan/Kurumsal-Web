@model IEnumerable<KurumsalWeb.Models.Model.Hizmet>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center">Hizmetler Bölümü</h2>
<p>
    @Html.ActionLink("Hizmet Ekle", "Create", new { }, new { @class = "btn btn-success" })
</p>
<table class="table table-striped table-bordered">

    <tr class="active">
        <th>@Html.DisplayNameFor(x => x.Baslik)</th>
        <th>@Html.DisplayNameFor(x => x.Aciklama)</th>
        <th>@Html.DisplayNameFor(x => x.ResimUrl)</th>
        <th>İşlemler</th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Baslik</td>
                <td>@Html.Raw(item.Aciklama)</td>
                <td><img class="img-responsive" width="200" height="200" src="@item.ResimUrl" /></td>
                <td>
                    @Html.ActionLink("Güncelle", "Edit", new { id = item.Id }, new { @class = "btn btn-info" }) &nbsp;&nbsp;|&nbsp;&nbsp;
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>

</table>