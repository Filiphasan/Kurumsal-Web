@model KurumsalWeb.Models.Model.Hizmet
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>

<h2 class="text-center">Yeni Hizmet Ekleme</h2>

<div class="form">
    <form class="form-validate form-horizontal" id="feedback_form" method="post" action="/Hizmet/Create" enctype="multipart/form-data">
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">@Html.DisplayNameFor(x => x.Baslik) <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" name="Baslik" minlength="5" type="text" required />
                
            </div>
        </div>
        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">@Html.DisplayNameFor(x => x.ResimUrl) <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control " type="file" name="resimUrl" accept=".png,.jpg,.jpeg,.svg"/>
            </div>
        </div>
        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">@Html.DisplayNameFor(x => x.Aciklama) <span class="required">*</span></label>
            <div class="col-lg-10">
                <textarea class="ckeditor" name="Aciklama"></textarea>
            </div>
        </div>
        <div class="form-group ">
            <div class="col-lg-2"></div>
            <div class="col-lg-10">
               <button class="btn btn-info">Hizmet Ekle</button>
            </div>
        </div>
    </form>
    <p>
        <a href="/Hizmet/Index" class="btn btn-danger">Geri Dön</a>
    </p>
</div>