@model KurumsalWeb.Models.Model.Hakkimizda
@{
    ViewBag.Title = "Hakkimizda";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb">
                    <li><a href="/AnaSayfa"><i class="fa fa-home"></i></a><i class="icon-angle-right"></i></li>
                    <li class="active">Hakkımızda</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<div class="container">
    <div class="col-md-12">
        <h2 class="text-center">Hakkımızda</h2>
        <hr />
        <img src="@Model.ResimUrl" alt="@Model.Aciklama" width="100%" class="align-center" />
        <br />
        <hr />
        <p class="">
            @Html.Raw(Model.Aciklama)
        </p>
    </div>
</div>
<br />
@{
    Html.RenderAction("FooterPartial", "Home");
}